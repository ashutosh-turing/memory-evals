# ============================================================================
# Memory-Break Orchestrator - Environment Configuration Template
# ============================================================================
# Copy this file to .env and fill in your values
# For local development, you can leave most values as defaults

# ============================================================================
# Application Settings
# ============================================================================
APP_NAME=memory-break-orchestrator
APP_VERSION=1.0.0
DEBUG=false
HOST=0.0.0.0
PORT=8001
LOG_LEVEL=INFO

# ============================================================================
# Database Configuration
# ============================================================================
DATABASE_URL=postgresql+psycopg2://user:password@localhost:5432/cli_eval_db

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_URL=redis://localhost:6379/0

# ============================================================================
# SSO Configuration (APAC Atlas Guard Service)
# ============================================================================
SSO_ENABLED=true
SSO_SERVICE_URL=https://apac-atlas-guard-svc-264685500362.us-central1.run.app/v1
ALLOWED_EMAIL_DOMAINS=@turing.com
JWT_SECRET_KEY=your-jwt-secret-key-here

# ============================================================================
# Google Cloud Configuration (Uses ADC - Application Default Credentials)
# ============================================================================
GOOGLE_CLOUD_PROJECT=your-gcp-project-id

# For local development: gcloud auth application-default login
# For production: Service account is automatically configured

# ============================================================================
# Cloud Tasks Configuration
# ============================================================================
QUEUE_ENABLED=true
CLOUD_TASKS_QUEUE=pr-evaluation-queue
CLOUD_TASKS_LOCATION=us-central1
CLOUD_TASKS_SERVICE_URL=https://your-backend-service.run.app

# ============================================================================
# Pub/Sub Configuration
# ============================================================================
PUBSUB_TOPIC=pr-evaluation-tasks
PUBSUB_SUBSCRIPTION=pr-evaluation-tasks-sub

# ============================================================================
# Storage Configuration
# ============================================================================
RUN_ROOT=./storage

# ============================================================================
# GitHub Configuration
# ============================================================================
GITHUB_TOKEN=ghp_your_github_token_here

# ============================================================================
# Agent API Keys
# ============================================================================
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here
GOOGLE_API_KEY=AIzaSyYour-Google-API-Key-Here
IFLOW_API_KEY=your-iflow-api-key-here

# ============================================================================
# Task Processing Configuration
# ============================================================================
TASK_TIMEOUT_SECONDS=7200
AGENT_SESSION_TIMEOUT=3600
MAX_CONTEXT_TOKENS=200000
MAX_FILES_PER_PR=50

# ============================================================================
# CORS Configuration
# ============================================================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://your-frontend.com

